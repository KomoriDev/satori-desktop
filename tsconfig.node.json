{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "compilerOptions": {
    "composite": true,
    "moduleResolution": "Bundler",
    "types": [
      "node",
      "electron-vite/node",
    ],
    "paths": {
      "@shared/*": ["./src/shared/*"],
    }
  },
  "include": [
    "src/main/**/*",
    "src/server/**/*",
    "src/shared/**/*",
    "forge.*",
    "vite.*.config.ts",
  ]
}