{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "composite": true,
    "resolveJsonModule": true,
    "moduleResolution": "Bundler",
    "allowSyntheticDefaultImports": true,
    "types": [
      "node"
    ],
    "lib": [
      "ESNext"
    ],
  },
  "include": [
    "src/main/**/*",
    "src/server/**/*",
    "forge.*",
    "vite.*.config.ts",
  ]
}